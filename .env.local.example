# ملف إعدادات البيئة المحلية
# انسخ هذا الملف إلى .env وأدخل البيانات الصحيحة

# إعدادات قاعدة البيانات المحلية
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/training_system_local
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=YOUR_PASSWORD
PGDATABASE=training_system_local

# إعدادات الخادم المحلي
PORT=8080
NODE_ENV=development

# أمان الجلسات (غيّر هذا في الإنتاج)
SESSION_SECRET=local_development_secret_key_change_in_production

# تحديد البيئة المحلية
LOCAL_ENV=true

# ملاحظات مهمة:
# 1. غيّر YOUR_PASSWORD إلى كلمة مرور PostgreSQL الخاصة بك
# 2. تأكد من إنشاء قاعدة البيانات training_system_local
# 3. تأكد من تشغيل PostgreSQL على المنفذ 5432